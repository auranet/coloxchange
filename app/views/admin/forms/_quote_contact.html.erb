  <tr><th>Opened</th><td><%= @instance.created_at.pretty %></td></tr>
  <tr class="top"><th>Name</th><td><%= @instance.contact ? @instance.contact.name : 'n/a' %></td></tr>
  <% if contact = @instance.contact -%>
  <% unless contact.customer_code.blank? %>
    <tr><th>Customer Code</th><td><%= h(contact.customer_code) %></td></tr>
  <% end %>
  <% unless contact.contact_method.blank? %>
    <tr><th>Preferred contact method</th><td><%= Contact::ContactMethod.hash[contact.contact_method] %></td></tr>
  <% end %>
  <% unless contact.email.blank? %>
    <tr><th>E-mail</th><td><%= mail_to(contact.email) %></td></tr>
  <% end %>
  <% unless contact.phone.blank? %>
    <tr><th>Phone</th><td><%= contact.phone %></td></tr>
  <% end %>
  <% unless contact.referrer.blank? %>
    <tr><th>Heard about <%= site_name %> from:</th><td><%= h contact.referrer %></td></tr>
  <% end %>
  <% unless contact.referring_site.blank? %>
    <tr><th>Referring URL:</th><td><%= link_to contact.referring_site, contact.referring_site %></td></tr>
  <% unless contact.search_term.blank? -%>
    <tr><th>Search keywords:</th><td><%= contact.search_term %></td></tr>
  <% end -%>
  <% end %>
  <% unless contact.note.blank? %>
    <tr><th>Note</th><td><%= h(contact.note).gsub("\n", '<br />') %></td></tr>
  <% end %>
  <% end -%>