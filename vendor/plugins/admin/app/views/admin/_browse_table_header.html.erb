<tr><% if deletable %><th class="checkbox"><%= check_box_tag("select_all","select_all",false,:class => "select-all") %></th><% end %><% columns.each_with_index do |column,index| %><th<% unless column == columns.last %> style="width:<%= width %>;"<% end %>><% column_name = column.is_a?(Hash) ? column.keys[0] : column.to_s %><%= link_to((column.is_a?(Hash) ? column.values[0] : column_name.split(".")[0].to_s.titleize),{:order => index+1,:sort => order == index && order_sort == "ASC" ? "down" : "up"},:class => "sort #{"sorting " if order == index}#{(order_sort || "").downcase}") %></th><% end %><% if advanced || deletable %><th style="font-weight:normal;text-align:right;"><% if instances.is_a?(WillPaginate::Collection) && !instances.empty? %><%= link_to "&laquo;" unless instances.current_page == 1 %>&nbsp;<%= (instances.current_page * instances.per_page) - instances.per_page + 1 %>&nbsp;-&nbsp;<%= (instances.current_page * instances.per_page) - instances.per_page + instances.size %>&nbsp;of&nbsp;<%= instances.total_entries %>&nbsp;<%= link_to "&raquo;",{:overwrite_params => {:page => instances.current_page.next}} unless instances.current_page == instances.page_count %><% end %></th><% end %></tr>
