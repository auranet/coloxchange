<%= start_form :action => "change_password" %>
<table class="form"><% if !@instance || @instance.id == @user.id %>
  <tr><th><label for="password">Current&nbsp;password:</label></th><td><%= password_field_tag("password","",:class => "text") %><%= hidden_field_tag("instance[change_password]",false) %></td></tr><% end %>
  <tr><th><label for="instance_password">New password:</label></th><td><%= password_field("instance","password",:class => "text",:value => "") %></td></tr>
  <tr><th><label for="instance_password_confirmation">Repeat&nbsp;password:</label></th><td><%= password_field("instance","password_confirmation",:class => "text",:value => "") %></td></tr>
</table>
<div class="toolbar">
  <%= admin_button("Change password") %> <%= admin_button_link("Cancel",{:action => "edit",:model => @instance.class.to_s.tableize.singularize,:id => @instance.id}) %>
</div>
<%= end_form %>