<div class="section">
  <!-- <h2>Records</h2> -->
  <% for model in @models %><% singular = model[:url].singularize %>
  <div class="record record-<%= singular %>">
    <%= link_to(model[:name],model[:activerecord] ? {:action => "browse",:model => model[:url]} : model[:action],:class => "record-link") %>
    <div class="record-actions">
      <%= link_to("",{:controller => "admin",:action => "browse",:model => model[:url]},:class => "browse-link",:title => "Browse #{model[:name].downcase}") if model[:activerecord] && model[:permission] %><% if @user.admin_omnipotent? || model[:permission].add %>
      <%= link_to "",model[:activerecord] ? {:controller => "admin",:action => "edit",:model => singular} : model[:action],:class => "add-link",:title => model[:title] %><% end %>
      <%= link_to "",{:controller => "admin",:action => "help",:model => model[:url]},:class => "help-link",:title => "Help with #{model[:name].downcase}" %>
    </div>
  </div><% end %>
</div>