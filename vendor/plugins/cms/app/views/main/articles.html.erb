<%= render :partial => "article",:collection => @articles %>
<div class="pages"><%= link_to("&laquo;",{:overwrite_params => {:page => @articles.current_page - 1}}) unless @articles.current_page == 1 %>&nbsp;<%= (@articles.current_page * @articles.per_page) - @articles.per_page + (@articles.total_entries == 0 ? 0 : 1) %>&nbsp;-&nbsp;<%= (@articles.current_page * @articles.per_page) - @articles.per_page + @articles.size %>&nbsp;of&nbsp;<%= @articles.total_entries %>&nbsp;<%= link_to "&raquo;",{:overwrite_params => {:page => @articles.current_page.next}} unless @articles.current_page == @articles.total_pages || @articles.total_entries == 0 %></div>